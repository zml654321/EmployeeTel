<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chb.dao.DeptMapper">
<select id="queryAllDept" resultType="com.chb.pojo.Dept">
    select  * from dept order by dept_no
</select>
    <select id="queryDept_idByName" resultType="com.chb.pojo.Dept">
        select  * from dept where dept_name=#{dept_name}
    </select>
</mapper>